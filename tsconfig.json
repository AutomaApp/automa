{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "secrets": ["secrets.blank.js"],
      "@business/*": ["business/dev/*"]
    },

    "types": ["chrome", "webextension-polyfill"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js",
    "business/**/*.ts",
    "business/**/*.js",
    "vite.config.ts",
    "src/manifest.config.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}

